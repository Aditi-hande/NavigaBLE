<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_boat3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_view_boat1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="-40dp"
        android:text="@string/x2" />


    <TextView
        android:id="@+id/text_view_boat1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/x1" />

    <EditText
        android:id="@+id/source"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/text_view_boat1"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/srcx" />

    <EditText
        android:id="@+id/dest"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/text_view_boat1"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/destx" />

    <Button
        android:id="@+id/graph_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="DrGraph" />
    <!--FrameLayout
        android:id="@+id/graph_frame"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/-->

    <com.example.ecommerce.navigable.GraphView
        android:id="@+id/graph_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"/>
</RelativeLayout>